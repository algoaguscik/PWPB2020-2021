<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Menjumlahkan 2 bilangan"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />

    <LinearLayout
        android:id="@+id/Grup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Masukkan bilangan pertama"
            android:textColor="#FF0000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/Angka1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="masukkan angka pertama" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Masukkan bilangan pertama"
            android:textColor="#1100FF"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/Angka2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="masukkan angka kedua" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Grup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Grup1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="HITUNG BILANGAN" />

        <EditText
            android:id="@+id/hasil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Hasil Penjumlahan"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>